<Window x:Class="Draci_doupe.House"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draci_doupe"
        mc:Ignorable="d"
        WindowState="Maximized"
        FontFamily ="./Fonts/#Minecrafter"
        Title="City" Width="1920" Height="1080"  >
    <Grid Width="1920" Height="1080" Margin="0,0,-8,-31" VerticalAlignment="Bottom">
        <Label x:Name="Needs" Content="Pozadavky" HorizontalAlignment="center" FontSize="30" Margin="0,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Level" Content="Level" HorizontalAlignment="center" FontSize="30" Margin="0,100,0,0" VerticalAlignment="Top"/>

        <Button x:Name="Back" Content="Mesto" FontSize="30"  Height="40" HorizontalAlignment="Center" Margin="0,900,0,0" VerticalAlignment="Top" Width="200" FontFamily="/Draci-doupe;component/Fonts/#Minecrafter Alt" Click="Back_Click"/>
        <Button x:Name="Upgrade" Visibility="Hidden" Content="Postavit" FontSize="30" Height="40" HorizontalAlignment="Center" Margin="0,850,0,0" VerticalAlignment="Top" Width="200" FontFamily="/Draci-doupe;component/Fonts/#Minecrafter Alt" Click="Upgrade_Click"/>


    </Grid>
</Window>
